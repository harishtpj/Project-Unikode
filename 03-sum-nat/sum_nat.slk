# SilkLang program to sum numbers from 1 to n
# Created by M.V.Harish Kumar on 05-05-2024

fun sumToN(n) {
    let sum := 0;
    for let i := 0; i <= n; i++ {
        sum += i;
    }
    return sum;
}

let n := int(input('Enter value for `n`: '));
let ans := sumToN(n);
print fmt("The sum from 1 to # is #", n, ans);